{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "id",
        "name",
        "description",
        "slug",
        "lat",
        "lng",
        "city",
        "state",
        "country",
        "amount_of_work",
        "start_price",
        "currency",
        "payment_method",
        "type_of_work",
        "time_of_work",
        "amount_of_props",
        "close_request",
        "close_reason",
        "start_propose_date",
        "end_propose_date",
        "start_tender_date",
        "end_tender_date",
        "date_created",
        "date_updated",
        "date_closed",
        "is_closed_successfully",
        "first_name",
        "last_name",
        "middle_name",
        "phone",
        "is_moderated",
        "is_closed",
        "is_disput",
        "customer",
        "executor",
        "category",
        "services"
    ],
    "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string", "minLength": 10 },
        "description": { "type": "string", "minLength": 40 },
        "slug": {
        "type": ["string", "null"],
        "pattern": "^[-a-zA-Z0-9_]+$",
        "minLength": 1
        },
        "lat": { "type": "number" },
        "lng": { "type": "number" },
        "city": { "type": ["string", "null"], "minLength": 1 },
        "state": { "type": ["string", "null"], "minLength": 1 },
        "country": { "type": ["string", "null"], "minLength": 1 },
        "amount_of_work": { "type": "string", "minLength": 1, "maxLength": 255 },
        "start_price": { "type": "integer", "minimum": 1, "maximum": 999999999 },
        "currency": { "type": "string" },
        "payment_method": { "type": "string" },
        "type_of_work": { "type": "string" },
        "time_of_work": { "type": ["string", "null"] },
        "amount_of_props": { "type": "integer" },
        "close_request": { "type": "boolean" },
        "close_reason": { "type": ["string", "null"], "maxLength": 2000 },
        "start_propose_date": { "type": "string", "format": "date-time" },
        "end_propose_date": { "type": "string", "format": "date-time" },
        "start_tender_date": { "type": "string", "format": "date-time" },
        "end_tender_date": { "type": "string", "format": "date-time" },
        "date_created": { "type": "string", "format": "date-time" },
        "date_updated": { "type": "string", "format": "date-time" },
        "date_closed": { "type": ["string", "null"], "format": "date-time" },
        "is_closed_successfully": { "type": "boolean" },
        "first_name": { "type": ["string", "null"], "maxLength": 25 },
        "last_name": { "type": ["string", "null"], "maxLength": 25 },
        "middle_name": { "type": ["string", "null"], "maxLength": 255 },
        "phone": { "type": ["string", "null"], "pattern": "^(\\+380\\d{9})?$", "maxLength": 13 },
        "is_moderated": { "type": ["boolean", "null"] },
        "is_closed": { "type": "boolean" },
        "is_disput": { "type": "boolean" },
        "customer": { "type": "integer" },
        "executor": { "type": ["integer", "null"] },
        "category": { "type": "integer" },
        "services": {
        "type": "array",
        "uniqueItems": true,
        "items": { "type": "integer" }
        }
    },
    "additionalProperties": false
}
